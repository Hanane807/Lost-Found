{% extends 'base.html.twig' %}

{% block title %}Publier une annonce{% endblock %}

{% block body %}
<div class="row justify-content-center mt-5 mb-5">
    <div class="col-md-8 col-lg-7">
        
        {# CARTE BLANCHE #}
        <div class="card-item p-4 p-md-5">
            
            <div class="text-center mb-4">
                <h2 class="fw-bold" style="color: var(--toon-orange);">Publier une annonce üì¢</h2>
                <p class="text-muted small">Remplissez les d√©tails pour qu'on puisse vous aider.</p>
            </div>

            {{ form_start(form) }}
                
                {# TITRE #}
                <div class="mb-3">
                    {{ form_row(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Ex: Cl√©s de voiture BMW'}}) }}
                </div>

                {# LIGNE 1 : Cat√©gorie & Statut (Listes d√©roulantes) #}
                <div class="row">
                    <div class="col-md-6 mb-3">
                        {# Pour les listes, on utilise 'form-select' #}
                        {{ form_row(form.category, {'attr': {'class': 'form-select'}}) }}
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form_row(form.status, {'attr': {'class': 'form-select'}}) }}
                    </div>
                </div>

                {# LIGNE 2 : Ville & Date #}
                <div class="row">
                    <div class="col-md-6 mb-3">
                        {{ form_row(form.city, {'attr': {'class': 'form-control', 'placeholder': 'Ex: Casablanca'}}) }}
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form_row(form.dateLost, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                {# DESCRIPTION #}
                <div class="mb-3">
                    {{ form_row(form.description, {'attr': {'class': 'form-control', 'rows': '4', 'placeholder': 'D√©crivez l\'objet en d√©tail...'}}) }}
                </div>

                {# ZONE PHOTO #}
                <div class="mb-4 p-3 rounded-3" style="background-color: #f8f9fa; border: 2px dashed #dee2e6;">
                    <h6 class="fw-bold text-muted mb-2 small">üì∏ Photo de l'objet</h6>
                    {{ form_row(form.imageFile, {'attr': {'class': 'form-control'}}) }}
                </div>

                {# LIGNE 3 : Couleur & Mots cl√©s #}
                <div class="row">
                    <div class="col-md-6 mb-3">
                        {{ form_row(form.color, {'attr': {'class': 'form-control', 'placeholder': 'Ex: Noir'}}) }}
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form_row(form.keywords, {'attr': {'class': 'form-control', 'placeholder': 'Ex: cuir, portefeuille, argent'}}) }}
                    </div>
                </div>
                
                {# BOUTON (Plus petit et centr√©) #}
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary px-5 py-2 fs-6 shadow-sm fw-bold rounded-pill">
                        PUBLIER L'ANNONCE
                    </button>
                </div>

            {{ form_end(form) }}
        </div>

    </div>
</div>
{% endblock %}