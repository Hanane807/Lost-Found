{% extends 'base.html.twig' %}

{% block title %}Objets Perdus & Trouv√©s{% endblock %}

{% block body %}

<div class="container py-5"> 

    <style>
        .page-title {
            font-family: 'Poppins', sans-serif;
            font-weight: 800;
            color: #2c3e50;
            margin: 0;
            font-size: 2.2rem;
        }

        .search-bar-container {
            background: white;
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.06);
            margin-bottom: 40px; /* Espace sous la barre */
            border: 1px solid #f0f0f0;
        }

        .card-item {
            background: white;
            border-radius: 15px;
            border: 1px solid #eee;
            box-shadow: 0 4px 10px rgba(0,0,0,0.03);
            overflow: hidden;
            transition: transform 0.2s;
            height: 100%;
            font-family: 'Poppins', sans-serif;
        }
        .card-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }
        .card-img-wrapper {
            height: 180px;
            position: relative;
            background-color: #f8f9fa;
        }
        .card-img-wrapper img { width: 100%; height: 100%; object-fit: cover; }
        
        .status-badge {
            position: absolute; top: 10px; right: 10px; 
            padding: 5px 12px; border-radius: 8px; 
            font-size: 0.75rem; font-weight: 700; text-transform: uppercase; color: white;
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        }
        .status-lost { background-color: #e74c3c; }
        .status-found { background-color: #27ae60; }

        .btn-filter {
            background-color: #2e86de;
            color: white;
            border-radius: 10px;
            font-weight: 600;
            border: none;
            padding: 10px;
        }
        .btn-filter:hover { background-color: #2e86ded5; color: white; }
    </style>

    {# --- 1. BARRE DE RECHERCHE --- #}
    <div class="search-bar-container">
        {{ form_start(searchForm) }}
        <div class="row g-3 align-items-center">
            
            <div class="col-lg-4 col-md-12">
                {{ form_widget(searchForm.keywords, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'üîç Ex: Cl√©s, iPhone...', 'style': 'border-radius: 10px; font-size: 0.95rem;'}}) }}
            </div>

            <div class="col-lg-3 col-md-6">
                {{ form_widget(searchForm.city, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'üìç Ville', 'style': 'border-radius: 10px; font-size: 0.95rem;'}}) }}
            </div>

            <div class="col-lg-3 col-md-6">
                {{ form_widget(searchForm.category, {'attr': {'class': 'form-select form-select-lg', 'style': 'border-radius: 10px; font-size: 0.95rem;'}}) }}
            </div>

            <div class="col-lg-2 col-md-12">
                <button type="submit" class="btn btn-filter w-100 py-2">
                    FILTRER
                </button>
            </div>

        </div>
        {{ form_end(searchForm) }}
    </div>

   {# --- 2. TITRE --- #}
    <div class="mb-4">
        <h1 class="page-title">Derni√®res annonces</h1>
        <p class="text-muted mt-1 mb-0">Les objets ajout√©s r√©cemment.</p>
    </div>

    {# --- 3. LISTE DES CARTES --- #}
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
      {% for item in items %}
        <div class="col">
            
            {# --- AJOUT DU LIEN ICI --- #}
            {# On pointe vers la route 'item_show' avec l'ID de l'objet #}
            {# text-decoration-none : pour ne pas souligner le texte #}
            <a href="{{ path('item_show', {'id': item.id}) }}" class="text-decoration-none">
                
                <div class="card-item">
                    
                    <div class="card-img-wrapper">
                        {% if item.image %}
                            <img src="{{ asset('uploads/items/' ~ item.image) }}" alt="{{ item.title }}">
                        {% else %}
                            <div class="d-flex align-items-center justify-content-center h-100 text-muted small">
                                Pas de photo
                            </div>
                        {% endif %}

                        <span class="status-badge {{ item.status == 'lost' ? 'status-lost' : 'status-found' }}">
                            {{ item.status == 'lost' ? 'PERDU' : 'TROUV√â' }}
                        </span>
                    </div>

                    <div class="p-3">
                        <h6 class="fw-bold mb-1 text-truncate text-dark" style="font-size: 1.1rem;">{{ item.title }}</h6>
                        
                        <p class="text-muted small mb-2">
                            {{ item.city }} ‚Ä¢ {{ item.dateLost|date('d/m/Y') }}
                        </p>
                        
                        <p class="text-muted small text-truncate mb-0">
                            {{ item.description }}
                        </p>
                    </div>

                </div>

            </a>

        </div>
        {% else %}
            <div class="col-12 text-center py-5">
                <p class="text-muted fs-5">Aucune annonce trouv√©e avec ces crit√®res. ü§î</p>
            </div>
        {% endfor %}
    </div>

</div>
{% endblock %}