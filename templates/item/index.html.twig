{% extends 'base.html.twig' %}

{% block title %}Objets Perdus & Trouv√©s{% endblock %}

{% block body %}

{# --- EN-T√äTE : Titre + Bouton Publier --- #}
<div class="d-flex justify-content-between align-items-center mb-4 mt-4">
    <div>
        <h1 class="fw-bold" style="color: var(--toon-blue);">Derni√®res annonces</h1>
        <p class="text-muted small mb-0">Trouvez ou signalez un objet perdu.</p>
    </div>
    <a href="{{ path('item_new') }}" class="btn btn-primary shadow-sm rounded-pill px-4">
        + Publier une annonce
    </a>
</div>

{# --- LA BARRE DE RECHERCHE (Mise √† jour avec keywords/city) --- #}
<div class="card-item p-3 mb-5 shadow-sm" style="border-radius: 50px;">
    {{ form_start(searchForm) }}
    <div class="row g-2 align-items-center">
        
        {# 1. Mots Cl√©s (keywords) #}
        <div class="col-md-4">
            {{ form_widget(searchForm.keywords, {'attr': {'class': 'form-control border-0 bg-light', 'style': 'border-radius: 30px;', 'placeholder': 'üîç Que cherchez-vous ?'}}) }}
        </div>

        {# 2. Ville (city) #}
        <div class="col-md-3">
            {{ form_widget(searchForm.city, {'attr': {'class': 'form-control border-0 bg-light', 'style': 'border-radius: 30px;', 'placeholder': 'üìç Ville'}}) }}
        </div>

        {# 3. Cat√©gorie #}
        <div class="col-md-3">
            {{ form_widget(searchForm.category, {'attr': {'class': 'form-select border-0 bg-light', 'style': 'border-radius: 30px;'}}) }}
        </div>

        {# 4. Bouton Filtrer #}
        <div class="col-md-2">
            <button type="submit" class="btn btn-warning w-100 fw-bold text-white shadow-sm" style="border-radius: 30px; background-color: var(--toon-orange); border: none;">
                Filtrer
            </button>
        </div>

    </div>
    {{ form_end(searchForm) }}
</div>

{# --- LA LISTE DES CARTES --- #}
<div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4">
    {% for item in items %}
        <div class="col">
            <div class="card-item">
                
                {# ZONE IMAGE #}
                <div class="card-img-wrapper">
                    {% if item.image %}
                        <img src="{{ asset('uploads/items/' ~ item.image) }}" alt="{{ item.title }}">
                    {% else %}
                        <div class="d-flex align-items-center justify-content-center h-100 text-muted bg-light">
                            <span>Pas de photo üì∑</span>
                        </div>
                    {% endif %}

                    {# BADGE STATUT #}
                    <span class="status-badge {{ item.status == 'lost' ? 'status-lost' : 'status-found' }}">
                        {{ item.status == 'lost' ? 'PERDU' : 'TROUV√â' }}
                    </span>
                </div>

                {# ZONE TEXTE #}
                <div class="p-3">
                    <h5 class="fw-bold mb-1 text-truncate" style="color: var(--text-dark);">{{ item.title }}</h5>
                    
                    <p class="text-muted small mb-2">
                        <strong>üìç {{ item.city }}</strong> <br>
                        <span style="font-size: 0.85em;">üìÖ {{ item.dateLost|date('d/m/Y') }}</span>
                    </p>
                    
                    <p class="small text-muted text-truncate" style="max-height: 40px; overflow: hidden;">
                        {{ item.description }}
                    </p>
                </div>

            </div>
        </div>
    {% else %}
        <div class="col-12 text-center py-5">
            <div class="alert alert-light shadow-sm d-inline-block rounded-pill px-5">
                ü§∑‚Äç‚ôÇÔ∏è Aucun objet trouv√© avec ces crit√®res.
            </div>
        </div>
    {% endfor %}
</div>

{% endblock %}