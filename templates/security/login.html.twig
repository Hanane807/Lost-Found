{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
{# On utilise Flexbox pour centrer verticalement et horizontalement #}
{# J'ai ajout√© mt-5 (marge) et pt-4 (espace interne) #}
<div class="row justify-content-center align-items-center mt-5 pt-4" style="min-height: 80vh;">    
    {# On limite la largeur : col-md-5 (sur PC) et col-lg-4 (sur grand √©cran) #}
    <div class="col-12 col-md-5 col-lg-4">
        
        {# On utilise ta classe 'card-item' d√©finie dans base.html.twig pour le style blanc arrondi #}
        <div class="card-item p-4 p-md-5">
            
            <div class="text-center mb-4">
                {# Titre styl√© avec tes couleurs #}
                <h2 class="fw-bold" style="color: var(--toon-blue);">Bon retour ! üëã</h2>
                <p class="text-muted small">Connectez-vous pour retrouver vos objets.</p>
            </div>

            <form method="post">
                {# Affichage des erreurs si le mot de passe est faux #}
                {% if error %}
                    <div class="alert alert-danger rounded-3 small py-2">
                        <i class="bi bi-exclamation-circle"></i> {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                {# Si l'utilisateur s'est d√©connect√© #}
                {% if app.user %}
                    <div class="mb-3 text-center small text-muted">
                        Vous √™tes connect√© en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">D√©connexion</a>
                    </div>
                {% endif %}

                {# CHAMP EMAIL #}
                <div class="mb-3">
                    <label for="inputEmail" class="form-label small fw-bold text-muted">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus placeholder="votre@email.com">
                </div>

                {# CHAMP PASSWORD #}
                <div class="mb-3">
                    <label for="inputPassword" class="form-label small fw-bold text-muted">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢">
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                {# REMEMBER ME #}
                <div class="checkbox mb-4">
                    <label class="small text-muted">
                        <input type="checkbox" name="_remember_me" style="accent-color: var(--toon-blue);"> Se souvenir de moi
                    </label>
                </div>

                {# BOUTON #}
                <button class="btn btn-primary w-100 py-2 shadow-sm fs-6" type="submit">
                    SE CONNECTER
                </button>
            </form>

            {# LIEN INSCRIPTION #}
            <div class="text-center mt-4 pt-3 border-top border-light">
                <p class="small text-muted mb-1">Pas encore de compte ?</p>
                <a href="{{ path('app_register') }}" class="fw-bold text-decoration-none" style="color: var(--toon-orange);">
                    Cr√©er un compte ici
                </a>
            </div>
        </div>

    </div>
</div>
{% endblock %}